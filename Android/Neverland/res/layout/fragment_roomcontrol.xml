<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">
    
		<com.larswerkman.colorpicker.ColorPicker
		    android:id="@+id/picker1"
		    android:orientation="vertical"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"/>
	      
	    <com.larswerkman.colorpicker.OpacityBar
		    android:id="@+id/opacitybar1"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"/>
	      
	    <com.larswerkman.colorpicker.SaturationBar
		    android:id="@+id/saturationbar1"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"/>
    
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">
    
		<com.larswerkman.colorpicker.ColorPicker
		    android:id="@+id/picker2"
		    android:orientation="vertical"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"/>
	      
	    <com.larswerkman.colorpicker.OpacityBar
		    android:id="@+id/opacitybar2"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"/>
	      
	    <com.larswerkman.colorpicker.SaturationBar
		    android:id="@+id/saturationbar2"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"/>
    
    </LinearLayout>
    
</LinearLayout>
